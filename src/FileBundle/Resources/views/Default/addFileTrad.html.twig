{% extends 'base.html.twig' %}
{% block body %}
    {% include 'menu.html.twig' %}
    <section id="main-content">
        <section class="wrapper" style="margin-top: 0px;">
            <div class="col-md-12 mt">
                <div class="content-panel">
                    <table class="table table-hover">
                        <h4><i class="fa fa-angle-right"></i> Files uploaded</h4>
                        <thead>
                        <tr>
                            <th>Key</th>
                            <th>Values</th>
                            <th>Add a translation</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for key in keys %}
                            <tr>
                                <td>{{ key.name }}</td>
                                <td>
                                    {% for value in key.values %}
                                        {{  value.value }}
                                    {% endfor %}
                                        </td>
                                <td><a href="{{ path('add_trad', {'id': key.values.0.id }) }}"><button type="button" style="margin: 10px;" class="btn btn-warning">Add</button></a></td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div><! --/content-panel -->
            </div>
        </section><! --/wrapper -->
    </section> <! MENU -->

{% endblock %}